---
import { eq } from 'drizzle-orm'
import { db } from '../db'
import { users } from '../db/schema'

export interface Props {
	initialSession: import('better-auth').Session
}
const { initialSession } = Astro.props

const User = await db
	.select()
	.from(users)
	.where(eq(users.id, initialSession.userId))
	.then((data) => data[0])
---

